<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="prefSettingHeader">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="list_item_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:minHeight">100dp</item>
        <!--<item name="android:layout_marginTop">@dimen/list_item_container_top_margin</item>
        <item name="android:padding">@dimen/list_item_container_padding</item>-->
    </style>

    <style name="list_item_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <!--<item name="android:visibility">gone</item>-->
    </style>

    <style name="list_item_main_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="list_item_header_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:layout_height">@dimen/list_item_header_height</item>-->
    </style>

    <style name="list_item_header_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType"> fitCenter</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="list_item_header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/list_item_header_bg</item>
        <item name="android:padding">@dimen/list_item_container_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_item_teaser_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">@dimen/list_item_container_padding</item>
    </style>

    <style name="list_item_action_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:paddingLeft">@dimen/list_item_container_padding</item>
        <item name="android:paddingRight">@dimen/list_item_container_padding</item>
        <item name="android:layout_marginTop">@dimen/list_item_container_top_margin</item>

    </style>

    <style name="list_item_action_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/list_item_action_text_margin</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_item_action_text_blue" parent="list_item_action_text">
        <item name="android:textColor">@color/list_item_action_text_color</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
